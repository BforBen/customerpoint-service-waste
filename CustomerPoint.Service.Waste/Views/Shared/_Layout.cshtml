<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title - CustomerPoint</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <link rel="canonical" href="@Url.Action(ViewContext.Controller.ValueProvider.GetValue("Action").RawValue.ToString(), ViewContext.Controller.ValueProvider.GetValue("Controller").RawValue.ToString())">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link href="//fonts.googleapis.com/css?family=Noto+Sans:400,700" rel="stylesheet">
    <link rel="stylesheet" href="~/assets/main.css">
    <meta name="ROBOTS" content="NOINDEX">
    @RenderSection("head", required: false)
</head>
<body>
    <a class="sr-only sr-only-focusable" href="#content">Skip to main content</a>

    <header role="banner" class="navbar navbar-gbc">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/" title="Go to the Guildford Borough Council on GitHub homepage" class="navbar-brand">
                    CustomerPoint
                </a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("API", "Index", "Help", new { area = "HelpPage" }, null)</li>
                </ul>
            </div>
        </div>
    </header>
    <!--<div class="service-stage service-stage-pre-alpha">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <strong>ALPHA:</strong> This
                </div>
            </div>
        </div>
    </div>-->
    <div class="container">
        @RenderBody()
    </div>
    <footer role="contentinfo">
        <div class="container">
            <div class="row">
                <div class="col-md-offset-6 col-md-6">

                </div>
            </div>
            <div class="row">
                <div class="col-md-7">
                    <ul class="list-inline">
                        <li><a href="">Help</a></li>
                        <li><a href="">Feedback</a></li>
                        <li>Built by <a href="http://guildfordbc.github.io" rel="nofollow">Business Systems</a></li>
                    </ul>
                </div>
                <div class="col-md-5">&copy; Guildford Borough Council - <a href="http://www.guildford.gov.uk">www.guildford.gov.uk</a></div>
            </div>
        </div>
    </footer>
    <script src="//code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>